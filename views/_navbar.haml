- elsif request.path_info.include? 'aboutus'
  - @about = 'active' 
- elsif request.path_info.include? 'client'
  - @client = 'active' 
- elsif request.path_info.include? 'swte'
  - @swte = 'active' 
- elsif request.path_info.include? 'login'
  - @login = 'active' 
- elsif request.path_info.include? 'contact'
  - @contact = 'active' 
- else
  - @home = 'active' 

   
